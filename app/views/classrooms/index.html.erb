<div class="page-header">
   <h1>Lista de Classes</h1>
</div>
<div class="row">
  <div class="col-md-12 col-sm-12">
      <table id="classrooms" class='table table-striped'>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nome do curso</th>
            <th>Nome do estudante</th>
          </tr>
        </thead>
        <tbody>
          <% @classrooms.each do |classroom| %>
          <tr>
            <td><%= link_to classroom.id, classroom %></td>
            <td><%= classroom.course.name %></td>
            <td><%= classroom.student.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Nova', new_classroom_path,class: "btn btn-success pull-right" %>
  </div>
</div>
